{% extends 'base.html.twig' %}

{% block body %}
    <h1>Créer une sortie</h1>
    {{ form_start(form) }}

    <div class="error">
        {{ form_errors(form) }}
    </div>

    <div class="wrapperLeft">
        <div class="nom">
            {{ form_row(form.nom) }}
        </div>
         <div class="date">
            {{ form_row(form.dateHeureDebut) }}
        </div>
        <div class="dateLimite">
            {{ form_row(form.dateLimiteInscription) }}
        </div>
        <div class="nbrInscrMax">
            {{ form_row(form.nbInscriptionsMax) }}
        </div>
        <div class="duree">
            {{ form_row(form.duree) }}
        </div>
        <div class="infoSorti">
            {{ form_row(form.infosSortie) }}
        </div>
    </div>

    <div class="wrapperRight">

        <div class="lieu">
            {{ form_row(form.lieu) }}
        </div>
    </div>

    <button type="submit">Créer</button>
    {{ form_end(form) }}

{% endblock %}